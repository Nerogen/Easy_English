<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0sp"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="0sp"
        android:scaleType="centerCrop"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0sp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="346dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Current_english_level"
            android:layout_width="300sp"
            android:layout_height="30sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0sp"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/level" />


        <ImageButton
            android:id="@+id/A1"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45sp"
            android:layout_marginEnd="60sp"
            android:layout_toStartOf="@+id/A2"
            android:background="@drawable/empty_background"
            android:contentDescription="A1"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/first_item" />


        <ImageButton
            android:id="@+id/A2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45sp"
            android:background="@drawable/empty_background"
            android:contentDescription="A2"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/second_item" />

        <ImageButton
            android:id="@+id/B1"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60sp"
            android:layout_marginTop="45sp"
            android:layout_toEndOf="@+id/A2"
            android:background="@drawable/empty_background"
            android:contentDescription="B1"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/third_item" />

        <ImageButton
            android:id="@+id/C1"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130sp"
            android:background="@drawable/empty_background"
            android:contentDescription="C1"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/fifth_item" />

        <ImageButton
            android:id="@+id/B2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@+id/A1"
            android:layout_marginTop="35sp"
            android:layout_marginEnd="60sp"
            android:layout_toStartOf="@+id/C1"
            android:background="@drawable/empty_background"
            android:contentDescription="B2"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/fourth_item" />

        <ImageButton
            android:id="@+id/C2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@+id/B1"
            android:layout_marginStart="60sp"
            android:layout_marginTop="35sp"
            android:layout_toEndOf="@+id/C1"
            android:background="@drawable/empty_background"
            android:contentDescription="C2"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/sixth_item" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="280sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0sp"
        android:layout_marginEnd="0sp"
        android:layout_marginBottom="64sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/grammar_button"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="65sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/empty_background"
            android:contentDescription="grammar"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/grammar_button" />

        <ImageButton
            android:id="@+id/listening_button"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="65sp"
            android:background="@drawable/empty_background"
            android:contentDescription="listening"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/listening_button" />

        <ImageButton
            android:id="@+id/reading_button"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="65sp"
            android:layout_marginBottom="50sp"
            android:background="@drawable/empty_background"
            android:contentDescription="reading"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/reading_button" />

        <ImageButton
            android:id="@+id/words_button"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="65sp"
            android:layout_marginBottom="50sp"
            android:background="@drawable/empty_background"
            android:contentDescription="words"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:srcCompat="@drawable/words_button" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0sp"
        android:layout_marginTop="0sp"
        android:layout_marginBottom="0sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/grammar_learn"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginEnd="75sp"
            android:layout_toStartOf="@+id/grammar_game"
            android:background="@drawable/empty_background"
            android:contentDescription="words"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/home"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/grammar_game"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2sp"
            android:background="@drawable/empty_background"
            android:contentDescription="words"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/grammar_about_us"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toEndOf="@+id/grammar_learn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/game"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/grammar_about_us"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginStart="75sp"
            android:layout_marginBottom="8sp"
            android:layout_toEndOf="@+id/grammar_game"
            android:background="@drawable/empty_background"
            android:contentDescription="words"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/about_us"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3sp"
            android:layout_marginBottom="15sp"
            android:text="Home"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/grammar_shop_card"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="12sp"
            android:background="@drawable/empty_background"
            android:contentDescription="words"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.984"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.333"
            app:srcCompat="@drawable/shopping_cart"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/coin"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4sp"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/grammar_shop_card"
            app:layout_constraintHorizontal_bias="0.18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/coin" />

        <ImageView
            android:id="@+id/ruby"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginStart="5sp"
            android:layout_marginTop="4sp"
            android:layout_toEndOf="@+id/textView3"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/grammar_shop_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ruby" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:layout_toStartOf="@+id/coin"
            android:text="1000"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/coin"
            app:layout_constraintHorizontal_bias="0.785"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            android:layout_toEndOf="@+id/coin"
            android:text="100"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/ruby"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>


</RelativeLayout>